{% extends "base.html.twig" %}

{% block title %}{{ titre }}{% endblock %}

{% block content %}
    <h1>{{ titre }}</h1>
    <div class="container">
        <form method="POST" action="/decode">
        <div class="d-flex justify-content-center">
            <div class="card border-warning mb-3" style="max-width: 30rem;">
                <div class="card-header">Decode</div>
                <div class="card-body">
                    <label for="exampleTextarea" class="form-label mt-4">Example textarea</label>
                    <textarea class="form-control" name="decode" id="decode" rows="5" style="height: 100px;"></textarea>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-warning">Decode Message</button>
                    <div>
                        <h1>{{decode}}</h1>
                    </div>
                </div>
            </div>
        </div>
        </form>
    </div>
{% endblock %}